{
  "name": "portfolio",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@apollo/client": "^3.4.16",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/jest": "^26.0.15",
    "@types/node": "^12.0.0",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "classnames": "^2.3.1",
    "graphql": "^16.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-markdown": "^7.1.0",
    "react-scripts": "4.0.3",
    "typescript": "^4.1.2",
    "reset-css": "^5.0.1",
    "sass-mq": "^5.0.1",
    "react-router-dom": "^6.2.1",
    "react-router-hash-link": "^2.4.3",
    "rehype-raw": "^6.1.0"
 },
  "devDependencies": {
    "@graphql-codegen/cli": "^2.2.2",
    "@graphql-codegen/introspection": "^2.1.0",
    "@graphql-codegen/schema-ast": "^2.4.0",
    "@graphql-codegen/typescript": "^2.3.1",
    "@graphql-codegen/typescript-resolvers": "^2.4.0",
    "@types/carbon-components-react": "^7.46.1",
    "prettier": "^2.4.1",
    "sass": "^1.45.0",
    "@craco/craco": "^6.4.3"
  },
  "scripts": {
    "start": "craco start",
    "build": "craco build",
    "test": "craco test",
    "test:cov": "yarn test --coverage --watchAll=false",
    "graph:generate": "NODE_TLS_REJECT_UNAUTHORIZED=0 graphql-codegen --config codegen.yml && eslint --fix --ext .ts ./src/models/"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "transformIgnorePatterns": [
      "node_modules/(?!react-markdown)/"
    ],
    "moduleNameMapper": {
      "@components/atom": "<rootDir>/src/components/atom",
      "@components/organism": "<rootDir>/src/components/organism",
      "@components/pages": "<rootDir>/src/components/pages",
      "@providers/mocks": "<rootDir>/src/providers/mocks",
      "@providers": "<rootDir>/src/providers",
      "@react/bem": "<rootDir>/src/commons/bem/bem.tsx"
    }
  }
}
